<!-- ================= MOBILE MENU ================= -->
<script>
const navToggle = document.getElementById("navToggle");
const mainNav = document.getElementById("mainNav");
navToggle.addEventListener("click",()=> mainNav.classList.toggle("open"));
</script>

<!-- ================= AUTO IMAGE CHANGE ================= -->
<script>
const gemData = [
 {img:"../assets/collection/sapphires/sapphire-round-1.jpg",title:"Royal Blue Round",desc:"Deep saturated royal blue with exceptional brilliance."},
 {img:"../assets/collection/sapphires/sapphire-oval-1.jpg",title:"Oval Sapphire",desc:"Elegant elongated brilliance with vivid colour zoning."},
 {img:"../assets/collection/sapphires/sapphire-cushion-1.jpg",title:"Cushion Cut Sapphire",desc:"Soft pillow shape enhancing colour dispersion."},
 {img:"../assets/collection/sapphires/sapphire-padparadscha-1.jpg",title:"Padparadscha",desc:"Rare pink-orange hue highly prized by collectors."}
];

let i=0;
const img=document.getElementById("gemImage");
const title=document.getElementById("gemTitle");
const desc=document.getElementById("gemDesc");
const box=document.querySelector(".showcase-image");

setInterval(()=>{
  box.classList.add("fade");
  setTimeout(()=>{
    i=(i+1)%gemData.length;
    img.src=gemData[i].img;
    title.textContent=gemData[i].title;
    desc.textContent=gemData[i].desc;
    box.classList.remove("fade");
  },900);
},4800);
</script>

<!-- ================= SCROLL REVEAL ================= -->
<script>
const reveals = document.querySelectorAll(".reveal");

const observer = new IntersectionObserver(entries=>{
  entries.forEach(entry=>{
    if(entry.isIntersecting){
      entry.target.classList.add("show");
    }
  });
},{ threshold:0.12 });

reveals.forEach(el=>observer.observe(el));
</script>

<script>
document.getElementById("year").textContent = new Date().getFullYear();
</script>

